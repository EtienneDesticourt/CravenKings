<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu.MainActivity"
    android:background="@drawable/main_menu_background">

    <Button
        android:layout_width="@dimen/main_menu_buttons_width"
        android:layout_height="@dimen/main_menu_buttons_height"
        android:text="Continue"
        android:id="@+id/continueButton"
        android:layout_marginTop="@dimen/main_menu_first_button_top_margin"
        android:background="@drawable/main_menu_button_shape"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMainMenuButtonText"
        android:textSize="@dimen/main_menu_buttons_text_size"
        android:onClick="onClickContinue" />

    <Button
        android:layout_width="@dimen/main_menu_buttons_width"
        android:layout_height="@dimen/main_menu_buttons_height"
        android:text="Start New Game"
        android:id="@+id/newGameButton"
        android:background="@drawable/main_menu_button_shape"
        android:layout_below="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_menu_buttons_margin_between_buttons"
        android:textColor="@color/colorMainMenuButtonText"
        android:textSize="@dimen/main_menu_buttons_text_size"
        android:onClick="onClickNewGame" />

    <Button
        android:layout_width="@dimen/main_menu_buttons_width"
        android:layout_height="@dimen/main_menu_buttons_height"
        android:text="Options"
        android:id="@+id/optionsButton"
        android:background="@drawable/main_menu_button_shape"
        android:layout_below="@+id/newGameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_menu_buttons_margin_between_buttons"
        android:textColor="@color/colorMainMenuButtonText"
        android:textSize="@dimen/main_menu_buttons_text_size"
        android:onClick="onClickOptions" />

    <Button
        android:layout_width="@dimen/main_menu_buttons_width"
        android:layout_height="@dimen/main_menu_buttons_height"
        android:text="Quit"
        android:id="@+id/quitButton"
        android:background="@drawable/main_menu_button_shape"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/optionsButton"
        android:layout_marginTop="@dimen/main_menu_buttons_margin_between_buttons"
        android:textColor="@color/colorMainMenuButtonText"
        android:textSize="@dimen/main_menu_buttons_text_size"
        android:onClick="onClickQuit" />
</RelativeLayout>
